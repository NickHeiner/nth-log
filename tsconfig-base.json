{
  "include": ["src"],
  "exclude": ["src/__tests__"],
  "compilerOptions": {
    "allowJs": true,                       
    "checkJs": true,                       
    "declaration": true,                   
    "declarationMap": true,                
    "sourceMap": true,                     
    
    "strict": true,                           
    
    "noUnusedLocals": true,                
    "noUnusedParameters": true,            
    "noImplicitReturns": true,             
    "noFallthroughCasesInSwitch": true,    
    
    "esModuleInterop": true,                  

    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  }
}
